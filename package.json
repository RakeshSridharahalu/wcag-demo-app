{
  "name": "wcag-demo-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "a11y:lint": "mkdir -p reports && eslint -c eslint.a11y.config.js \"src/**/*.{ts,tsx}\" --format json -o reports/eslint-a11y.json || true",
    "a11y:report": "node scripts/eslint-to-github.js",
    "a11y:runtime": "vite build && start /B vite preview --port 5173 --host && npx wait-on http://localhost:5173 && node scripts/axe-playwright.js"
  },
  "dependencies": {
    "vite": "^5.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@typescript-eslint/eslint-plugin": "8.38.0",
    "@typescript-eslint/parser": "8.38.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "axe-playwright": "^2.2.2",
    "eslint": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "playwright": "^1.56.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^9.0.3"
  }
}
